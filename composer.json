{
    "name": "raxos/http",
    "description": "Http client and foundation.",
    "license": "mit",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "type": "library",
    "authors": [
        {
            "name": "Bas Milius",
            "email": "bas@mili.us"
        }
    ],
    "autoload": {
        "psr-4": {
            "Raxos\\Http\\": "src/Raxos/Http"
        }
    },
    "config": {
        "platform": {
            "php": "8.4"
        }
    },
    "repositories": [
        {
            "type": "path",
            "url": "../*",
            "symlink": true
        }
    ],
    "require": {
        "ext-ctype": "*",
        "ext-mbstring": "*",
        "jetbrains/phpstorm-attributes": "^1.2",
        "guzzlehttp/guzzle": "^7",
        "raxos/foundation": "*"
    },
    "require-dev": {
        "raxos/database": "*"
    },
    "suggest": {
        "raxos/database": "to use the Model constraint attribute."
    }
}
